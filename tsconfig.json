{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "keyofStringsOnly": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "typeRoots": ["node_modules/@types", "src/@types"],
  "exclude": ["node_modules", "build", "scripts", "config/webpack", "src/setupTests.ts", "./node_modules/**/*"],
  "include": ["./src/**/*", "@types", "__tests__"]
}
